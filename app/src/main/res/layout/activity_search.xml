<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/searchET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchButtonB"
        android:maxLines="1"
        android:maxLength="20"
        android:hint="@string/HintTextSearchField"/>

    <Button
        android:id="@+id/searchButtonB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/searchET"
        android:layout_alignTop="@+id/searchET"
        android:text="@string/SearchButton"
        tools:text="@string/SearchButton"/>

</RelativeLayout>